<% provide(:title, "Home") %>


	<% if logged_in? %>
			<div class="row home-box">
			   <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">

			     <div class="row">
			            <div class="col-lg-6 col-md-6 col-sm-6 ">
			            	
			            	<%= link_to "New Patient", new_patient_path, :class => "home-tile" %>
			            </div>
			            <div class="col-lg-6 col-md-6 col-sm-6 ">
			            	<%= link_to "Existing Patients", patients_path, :class => "home-tile" %>
			            </div>
			     </div>
			     <% if current_user.admin? %>
			     <div class="row">
			            <div class="col-lg-6 col-md-6 col-sm-6">
			            	<%= link_to "New treatment record", new_treatment_path, :class => "home-tile" %>
			            </div>
			            <div class="col-lg-6 col-md-6 col-sm-6">
			            	<%= link_to "Admin", admins_index_path, :class => "home-tile" %>
			            </div>
			     </div>
			     <%end%>

			    </div>
			 </div>
			

	<%else%>

			<div class="row">
			 
				<%= render 'sessions/new'%>

			  
			</div>
	<%end%>

