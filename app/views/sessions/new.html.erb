<% provide(:title, "Log in") %>


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="center-login-form">
    <%= bootstrap_form_for(:session, url: login_path) do |f| %>

      <%= f.email_field :email, hide_label: true, placeholder: "Enter User's Email", icon:"envelope"%>

      <%= f.password_field :password,hide_label: true, placeholder: "Choose a Password",icon:"lock"%>

      <%= f.form_group :remember_me do %>
      <%= f.check_box :remember_me do %>
      Remember me on this computer
      <% end %>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary reg-form-button" %>
    <% end %>
      </div>
  </div>
</div>