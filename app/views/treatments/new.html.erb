

<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 edit-patient-form ">

	<%= bootstrap_form_for(Treatment.new) do |f| %>


      

      <div class="col-lg-6"><%= f.date_field :teartment_date, label: "date" ,icon: "calendar"%></div>
      
      <div class="col-lg-6"><%= f.number_field :tooth_number, label: "Tooth Number",icon: "number"%></div>

      <div class="col-lg-12"><%= f.text_area  :remark, label: "Remarks" , icon: "pencil"%></div>

      <div class="col-lg-3"><%= f.number_field :fee, label: "Fee" ,icon: "number"%></div>

      <div class="col-lg-3"><%= f.number_field :paid,label: "Paid" ,icon: "number"%></div>

      <div class="col-lg-3"><%= f.number_field :balance,label: "balance" ,icon: "number"%></div>

      <div class="col-lg-3"><%= f.number_field :associate,label: "associate" ,icon: "number"%></div>

      <div class="col-lg-3"><%= f.number_field :clinic,label: "clinic" ,icon: "number"%></div>

      <div class="col-lg-3"><%= f.collection_select :patient_id, Patient.all,:id, :patient_number %></div>

      <div class="col-lg-6">
      <%= f.file_field :patient_xray%>
      </div>

      

     

      <div class="col-lg-6"><%= f.submit "Create new record", class: "btn btn-primary reg-form-button treatment-btn" %></div>
      
    <% end %>

</div>

