<% provide(:title, @patient.first_name) %>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 patient_info" >

  	<%= image_tag @patient.patient_avatar.url(:medium) %>
  
  </div>

  </div>
    <div class="row">
    	 <div class="col-lg-6 col-lg-offset-3 user_info">

      <h1 class="user-info-h1">
        <%= @patient.first_name %>
      </h1>
      </div>   
    </div>

    <div class="row">

    	<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 ">
	    	<div class="table-responsive">          
	  			<table class="table">
	    		
	    			<tbody>
	      				<tr>
	        				<td>First Name:</td>
	        				<td class="td2"><%= @patient.first_name %></td>
	        			</tr>

	        			<tr>
	        				<td>Last name:</td>
	        				<td class="td2"><%= @patient.last_name %></td>
	        			</tr>

	        			<tr>
	        				<td>Middle name:</td>
	        				<td class="td2"><%= @patient.middle_name %></td>
	        			</tr>

	        			<tr>
	        				<td>patient number:</td>
	        				<td class="td2"><%= @patient.patient_number %></td>
	        			</tr>

	        			<tr>
	        				<td>title:</td>
	        				<td class="td2"><%= @patient.title %></td>
	        			</tr>

	        			<tr>
	        				<td>birtday:</td>
	        				<td class="td2"><%= @patient.birtday %></td>
	        			</tr>

	        			<tr>
	        				<td>address:</td>
	        				<td class="td2"><%= @patient.address %></td>
	        			</tr>

	        			<tr>
	        				<td>contact_number:</td>
	        				<td class="td2"><%= @patient.con_number %></td>
	        			</tr>

	        			<tr>
	        				<td>diagnosis:</td>
	        				<td class="td2"><%= @patient.diagnosis %></td>
	        			</tr>

	        			<tr>
	        				<td>consultation_date:</td>
	        				<td class="td2"><%= @patient.consult_date %></td>
	        			</tr>

	        			<tr>
	        				<td>guardian:</td>
	        				<td class="td2"><%= @patient.guardian %></td>
	        			</tr>

	        			<tr>
	        				<td>physician:</td>
	        				<td class="td2"><%= @patient.physician %></td>
	        			</tr>
	        			<% if @patient.patient_od.present? %>
	        			<tr>
	        				<td>Oral diagnosis file:</td>
	        				<td class="td2"><%= link_to 'Download file', @patient.patient_od.url %></td>
	        			</tr>
	        			<%end%>



	        		</tbody>

				 </table>
			</div>
			<% if current_user.admin? %>
			<p>Treatments record</p>
			<% if @patient.treatments.present? %>
			<% @patient.treatments.each do |treat| %>
				
				<span class="patient-treatments-link"><%= link_to treat.teartment_date,treat %></span>
				<%end%>
				<%end%>
				<%end%>

		</div>

    </div>

    <div class:"row">
    	<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 ">
    		<% if current_user.admin? %>
     <%= link_to "delete patient", @patient, method: :delete,:class => "btn btn-primary reg-form-button delete-button",
                                  data: { confirm: "Are You sure you want to delete this user ?" } %>
  		<% end %>
   		 	<%= link_to "edit information", edit_patient_path(@patient), :class => "btn btn-primary reg-form-button" %>
   		 	
   		 </div>
  	</div>


